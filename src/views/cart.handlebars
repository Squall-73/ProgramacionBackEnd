<div>
    <h1>Carrito</h1>

    <form>
        <button type="button" onclick="emptyCart('/api/carts/{{cid}}')">Empty Cart</button>
    </form>

    <form>
        <button type="button" onclick="goBack()">Return</button>
    </form>

    {{#each cart}}

      <p><b>Title:</b> {{product.title}}</p>
      <p><b>Description:</b> {{product.description}}</p>
      <p><b>Price:</b> {{product.price}}</p>
      <p><b>Quantity:</b> {{quantity}}</p>
      <form>
            <label for="quantity">New Quantity:</label>
            <input type="number" id="quantity-{{product._id}}" name="quantity" value="{{quantity}}">
            <button type="button" onclick="updateQuantity('/api/carts/{{../cid}}/products/{{product._id}}')">Update Quantity</button>
            <button type="button" onclick="removeProductFromCart('/api/carts/{{../cid}}/products/{{product._id}}')">Remove Product</button>
        </form>
      {{#if thumbnail.length}}
      <p><b>Thumbnail:</b> {{thumbnail}}</p>
      {{/if}}
      
      <hr></hr>
    {{/each}}

    <b><a href="/api/session/purchase">Comprar</a></b>
</div>
   <script src="/js/carts.js"></script>